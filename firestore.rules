
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authenticated users
    function isAuthenticated() {
      return request.auth != null;
    }

    // Default deny all reads and writes to force explicit rules
    match /{document=**} {
      allow read, write: if false;
    }

    // -------------------------------------------------------------------------
    // PUBLIC-READ, ADMIN-WRITE COLLECTIONS
    // -------------------------------------------------------------------------

    match /crops/{cropId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /states/{stateId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /seasons/{seasonId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /cropLifecycles/{cropLifecycleId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /weatherAlerts/{weatherAlertId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /translations/{translationId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /farmingTips/{farmingTipId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /governmentSchemes/{governmentSchemeId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /offlineContent/{offlineContentId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
